<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  select {
    padding: 10px;
    margin-bottom: 20px;
    width: 200px;
  }

  input[type="submit"] {
    padding: 10px 20px;
    background-color: #4caf50;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
</style>

<div class="container">
  <%= form_tag import_cities_path, method: :post do %>
    <%= select_tag :state_sigla, options_for_select(['PR', 'RS', 'SC']), prompt: 'Select a state' %>
    <%= submit_tag 'Import Cities' %>
  <% end %>
</div>


